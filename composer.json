{
    "name": "close/partner-sdk",
    "description": "Official SDK for Close partners.",
    "type": "library",
    "require": {
      "php": "^7.4|^8.0|^8.1",
        "psr/http-factory": "^1.0",
        "psr/http-client": "^1.0",
        "php-http/client-common": "^2.5",
        "php-http/discovery": "^1.14",
        "symfony/options-resolver": "^5.4",
        "ext-json": "*",
        "php-http/guzzle7-adapter": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "php-http/mock-client": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "ClosePartnerSdk\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ClosePartnerSdk\\Tests\\": "tests"
        }
    },
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Close team",
            "email": "devteam@thecloseapp.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "php-http/discovery": false
        }
    }
}
